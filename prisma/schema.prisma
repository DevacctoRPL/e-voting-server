generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  Nama     String
  NIU      String   @unique
  Password Int
  pilihan  Paslon[]

  @@index(NIU)
}

model Paslon {
  Id               Int        @id @default(autoincrement())
  Nama_Ketua       String
  Nama_Wakil_Ketua String
  Organisasi       Organisasi
  Suara            User[]
}

enum Organisasi {
  OSIS
  MPK
}
